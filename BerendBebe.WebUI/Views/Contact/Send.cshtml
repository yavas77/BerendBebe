@model ContactSendDto
@{
    ViewData["Title"] = "İletişim";
}
<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-sm-2">
                <div class="contact-info">
                    <h2 class="title text-center">&nbsp;</h2>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="">
                    <h2 class="title text-center">Bize Mesaj Gönderin</h2>
                    <div class="status alert alert-success" style="display: none"></div>
                    <form asp-controller="Contact" asp-action="Send" id="main-contact-form" class="contact-form row" name="contact-form" method="post">
                        <div class="form-group col-md-6">
                            <input asp-for="Name" class="form-control" placeholder="Ad Soyad">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <input asp-for="EmailAdress" class="form-control" placeholder="Email Adres">
                            <span asp-validation-for="EmailAdress"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <input asp-for="Subject" class="form-control" placeholder="Konu">
                            <span asp-validation-for="Subject"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <textarea asp-for="Message" id="message" class="form-control" rows="8" placeholder="Mesajınızı Buraya Yazınız"></textarea>
                            <span asp-validation-for="Message"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Gönder">
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div><!--/#contact-page-->