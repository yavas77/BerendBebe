@model CategoryUpdateDto
@{
    ViewData["Title"] = "Update";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Yeni Kategori</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Kategori</a></li>
                    <li class="breadcrumb-item active">Kategori Güncelle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="Admin" asp-controller="Category" asp-action="Update" method="post" class="w-75 mx-auto mt-2 p-2">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="col-form-label" asp-for="CategoryName"></label>
                                <input asp-for="CategoryName" class="form-control" />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="IsActive" class="col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="IsActive" data-toggle="toggle" data-on="Aktif" data-off="pasif" data-size="normal">
                                </div>
                                @*<div class="btn-group" id="status" data-toggle="buttons">
                                        <label class="btn btn-default btn-on btn-xs active">
                                            <input type="radio" value="1" name="multifeatured_module[module_id][status]" checked="checked">ON
                                        </label>
                                        <label class="btn btn-default btn-off btn-xs ">
                                            <input type="radio" value="0" name="multifeatured_module[module_id][status]">OFF
                                        </label>
                                    </div>*@
                            </div>


                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->